<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Purchases.Views.AmountProductPage"
             
             BackgroundColor="Transparent">
    <Frame VerticalOptions="Center" BorderColor="White" BackgroundColor="#2196F3" Margin="10" Padding="10" CornerRadius="10">
        <StackLayout>
            <Label Text="Informe a quantidade: " TextColor="White" FontSize="Medium" FontAttributes="Bold"/>
            <Entry Text="{Binding Product.Amount}" TextColor="White" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
            <Button BorderColor="White" BackgroundColor="SkyBlue" Text="Salvar" Command="{Binding SaveCommand}" CornerRadius="10" TextColor="White" FontAttributes="Bold"/>
        </StackLayout>
    </Frame>
</ContentPage>